@model Comment 
@{
    ViewData["Title"] = "Comment Detail";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <p>
            @ViewData["Title"] - <a asp-controller="Comment" asp-action="Index" class="btn btn-primary btn-sm">Comments</a>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>Comment</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>@Model.Text</td>
                    <td>
                        <a asp-controller="Comment" asp-action="Edit" class="btn btn-success btn-sm" asp-route-id="@Model.Id">Edit</a> |
                        <a asp-controller="Comment" asp-action="Delete" class="btn btn-danger btn-sm" asp-route-id="@Model.Id" onclick="return confirm('Are you sure ?')">Delete</a>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</div>